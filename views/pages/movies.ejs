<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/style.css">
    <title>Movie-Db</title>
</head>

<body>
    <header>
        <a href="/">Home</a>
        <input type="text" name="search" id="txt-search">
        <button id="">Search</button>
    </header>
    <main>
        <section id="filter-genre">
        </section>
        <div id="list-movies">
            <% movies.forEach(e => { %>
            <a href="/details/<%= e.id %> ">
                <figure>
                    <img src="https://image.tmdb.org/t/p/w400<%= e.poster_path %>" alt="">
                    <figcaption>
                        <h3><%= e.title %> </h3>
                    </figcaption>
                </figure>
            </a>
            <% }) %>
        </div>
    </main>

</body>

</html>